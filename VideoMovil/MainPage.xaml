<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VideoMovil.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Coral" Padding="24" CornerRadius="0">
            <Label Text="VIDEOS" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button x:Name="btnAgregar" BackgroundColor="CadetBlue" Text="Agregar Videos" Clicked="btnAgregar_Clicked"></Button>
        <Button x:Name="btnSwipe" BackgroundColor="CadetBlue" Text="Ver Lista" Clicked="btnSwipe_Clicked"></Button>
    </StackLayout>

</ContentPage>
